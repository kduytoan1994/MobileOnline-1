<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/header_view_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/header_view_bg" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_guest_circle_black_48dp"
        app:border_color="#ffffff"
        app:border_width="2dp" />

    <TextView
        android:id="@+id/name_header_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_icon"
        android:layout_marginLeft="16dp"
        android:text="Nguyen Dinh Duc"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/email_header_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_header_view"
        android:layout_marginLeft="16dp"
        android:text="dinhduc0605@gmail.com"
        android:textColor="@android:color/white" />
</RelativeLayout>